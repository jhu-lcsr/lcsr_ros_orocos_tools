<package>
  <description brief="kdl_urdf_tools">
    This package contains utilities and helper libraries for using KDL with ROS
    URDF structures.

    See the C++ API for more details.
  </description>
  <author>Jonathan Bohren</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/kdl_urdf_tools</url>

  <depend package="roscpp" />
  <depend package="kdl" />
  <depend package="kdl_parser" />
  <depend package="std_msgs"/>
  <depend package="sensor_msgs"/>
  <depend package="geometry_msgs" />
  <depend package="trajectory_msgs" />
  <depend package="tf" />
  <depend package="tf_conversions" />
  <depend package="angles" />

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -Wl,-rpath,${prefix}/lib -lkdl_urdf_tools"/>
  </export>

</package>
